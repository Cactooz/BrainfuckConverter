<Page x:Class="BrainfuckInterceptor.Views.SettingsUI"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:BrainfuckInterceptor"
	  mc:Ignorable="d" 
	  d:DesignHeight="400" d:DesignWidth="430"
	  Title="Settings" Background="{DynamicResource Background}" Foreground="{DynamicResource Foreground}">

	<StackPanel>
		<Label Content="Theme"/>
		<Button x:Name="ThemeButton" Content="Change to Light Theme" Height="40" Margin="5" Click="ThemeButton_Click"/>

		<Label Content="BRAINFUCK Memory Header"/>
		<WrapPanel  Orientation="Horizontal">
			<RadioButton x:Name="MemoryASCIIButton" Content="ASCII" Margin="5" Click="MemoryASCIIButton_Click"/>
			<RadioButton x:Name="MemoryExtendedASCIIButton" Content="Extended ASCII" Margin="5" Click="MemoryExtendedASCIIButton_Click"/>
			<RadioButton x:Name="MemoryLettersNumbersButton" Content="Only Letters and Numbers" Margin="5" Click="MemoryLettersNumbersButton_Click"/>
			<RadioButton x:Name="MemoryEmptyButton" Content="Empty" Margin="5" Click="MemoryEmptyButton_Click"/>
			<RadioButton x:Name="MemoryAutoButton" Content="Auto" Margin="5" Click="MemoryAutoButton_Click"/>
		</WrapPanel>
	</StackPanel>
</Page>
